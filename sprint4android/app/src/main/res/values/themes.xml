<!-- styles.xml -->
<resources>

    <!-- tema personalizado -->
    <style name="TemaCustomizado" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Cambia el color de fondo -->
        <item name="android:windowBackground">@color/colorFondo</item>

        <!-- Cambia el color del texto -->
        <item name="android:textStyle">@style/EstiloTexto</item>

        <!-- Cambia el estilo de los botones -->
        <item name="android:buttonStyle">@style/EstiloDeBoton</item>
    </style>

    <!-- Estilo personalizado para los botones -->
    <style name="EstiloDeBoton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorFondoBoton</item>
        <item name="android:textColor">@color/colorTextoBotones</item>
    </style>
    <style name="EstiloTexto">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorTexto</item>
    </style>
</resources>
